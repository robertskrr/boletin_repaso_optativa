<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".Pregunta3Activity">

    <TextView
        android:id="@+id/textViewPreg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son las 19:00 y una clase ha terminado el día, ¿qué clase es?"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/preg3Incorrect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="incorrecta"
            android:text="DAM"
            app:backgroundTint="#F44336" />

        <Button
            android:id="@+id/preg3Correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="correcta"
            android:text="MARKETING"
            app:backgroundTint="#009688" />

        <Button
            android:id="@+id/preg3Incorrect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="incorrecta"
            android:text="ESPECIALIZACION"
            app:backgroundTint="#FFC107" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>