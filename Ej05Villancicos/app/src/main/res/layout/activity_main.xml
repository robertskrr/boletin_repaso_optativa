<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA3A3A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgButtonArbol"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#535353"
            android:onClick="villancicoArbol"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/arbol" />

        <ImageButton
            android:id="@+id/imgButtonReno"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FF9D9D"
            android:onClick="villancicoReno"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/reno" />

        <ImageButton
            android:id="@+id/imgButtonCampana"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#71C874"
            android:onClick="villancicoCampana"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/campana" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>